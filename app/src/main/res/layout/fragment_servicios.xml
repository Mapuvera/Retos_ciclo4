<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageServ1"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:src="@drawable/domicilo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textServ1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Domicilios" />

                    <TextView
                        android:id="@+id/descriServ1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Contamos con una gran cobertura para hacer los domicilios" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageServ2"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:src="@drawable/horas" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textServ2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Atencion 24 horas" />

                    <TextView
                        android:id="@+id/descriServ2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nunca paramos de servirte la comida que quieres" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageServ3"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:src="@drawable/calendar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textServ3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Llamanos para tus eventos" />

                    <TextView
                        android:id="@+id/descriServ3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Somos los indicados para tus eventos" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageServ4"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:src="@drawable/atencion" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textServ4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gran atencion al cliente" />

                    <TextView
                        android:id="@+id/descriServ4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Contamos con personas capacitadas en la atenciÃ³n al cliente" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>